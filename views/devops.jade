extends layout

block content

    h1(class='page-header') Kenneth Copeland Ministries - Devops
    p

    div(class='container')
      table(id='beam-files-table' class='table table-hover table-striped')
        thead(class='thead-inverse')
          th #
          th Command Name
          th Stacks

        each command,index in commands
            tr
              th(scope="row") #{index + 1}
              td
                | #{command.name}
              td
                | #{command.stacks}